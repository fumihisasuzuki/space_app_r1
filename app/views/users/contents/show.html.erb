<% provide(:title, current_user.user_name) %>
<div>
  <table class="table table-bordered table-condensed" id="user-table">
    <tr>
      <td>氏名: <%= current_user.user_name %></td>
      <td>E-mail: <%= current_user.email %></td>
      <td>管理者: <%= current_user.admin %></td>
      <td>インターネット検索: <%= current_user.web_search_url %></td>
    </tr>
    <tr>
      <td>プロバイダー: <%= current_user.provider %></td>
      <td>uid: <%= current_user.uid %></td>
      <td>直前日数: <%= current_user.days_before %>日</td>
      <td>路線検索: <%= current_user.train_search_url %></td>
    </tr>
  </table>
</div>

<div class="container">
  <h2>イベント一覧</h2>

  <div class="col-md-4 col-md-offset-3">
    <%= link_to "イベント新規作成", new_event_path, remote: true, class: "btn btn-lg btn-primary pull-left" %>
  </div>

  <div class="col-md-8 col-md-offset-2">
    <% @events.each do |event| %>
      <% decided_schedule = event.schedules.find_by(event_id: event.id, decided: true) %>
      <div>
        <table class="table table-bordered table-condensed" id="event-table">
          <tr>
            <td>イベントID: <%= event.id %></td>
            <td>event_id: <%= decided_schedule.event_id %></td>
            <td>
              <%= link_to event.event_name, event_path(event) %>
              <%= link_to "削除", 
                event_path(event), 
                method: :delete, 
                data: {confirm: "#{decided_schedule.held_at}の「#{event.event_name}」を削除します。よろしいですか？"}, 
                class: "btn btn-danger"
              %>
            </td>
          </tr>
          <tr>
            <td>日程ID: <%= decided_schedule.id %></td>
            <td>確定: <%= decided_schedule.decided %></td>
            <td>日程: <%= decided_schedule.held_at %></td>
          </tr>
          <tr>
            <td>note: <%= event.chouseisan_note %></td>
            <td>url: <%= event.chouseisan_url %></td>
            <td>check: <%= event.chouseisan_check %></td>
          </tr>
        </table>
      </div>
    <% end %>

  </div>
</div>

<!--モーダルウインドウ表示-->
<div id="new-event" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

