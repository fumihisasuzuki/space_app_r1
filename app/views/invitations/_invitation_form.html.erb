<%= form_with(url: invitations_update_event_path(model), model: model, method: :patch, local: true, class:"form-inline") do |f| %>

  <%= f.label column_name, class: "label-#{yield(:class_text)}" %>（初期値を表示するには、一度空欄で保存してください。）
  <br>
  <% if model["#{column_name}"].present? %>
    <%= f.text_area column_name, autofocus: true, placeholder: message, size: "80x10", class: "form-control" %>
  <% else %>
    <%= f.text_area column_name, autofocus: true, value: value, placeholder: message, size: "80x10", class: "form-control" %>
  <% end %>
  <br><br><%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-#{yield(:class_text)}" %>
  <button type="button" class="btn btn-info btn-lg clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= model["#{column_name}"] %>">保存した案内文をコピー</button>

  <% if Rails.env.development? %>
    <div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="3" data-url="https://d17380f6aeae44d7b7d7f89e339a501a.vfs.cloud9.ap-northeast-1.amazonaws.com" data-color="default" data-size="large" data-count="false" style="display: none;"></div>
    <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
  <% else %>
    <div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="3" data-url="https://space-app-from-2020.herokuapp.com/" data-color="default" data-size="large" data-count="true" style="display: none;"></div>
    <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
  <% end %>
  
  <br>
  ↑　必ず押してからコピー

<% end %>