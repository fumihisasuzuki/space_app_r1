<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_with(model: @event, local: true, class:"form-inline") do |f| %>
      <%= f.text_field :station, placeholder: "開催場所（駅名）を入力", class: "form-control" %>
      <%= f.submit "変更", class: "btn btn-sm btn-primary btn-form" %>
      <button type="button" class="btn btn-info btn-sm clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= @event.station %>">駅名コピー</button>
      <% if current_user.station && @event.station %>
        <%= link_to_train_search("駅名で路線検索", current_user.station, @event.station) %>
      <% else %>
        <%= link_to "路線検索", current_user.train_search_url, class: "btn btn-danger btn-sm", target: :_blank %>
        「駅名で路線検索」を利用するには、駅名を登録してください
      <% end %>
      <% event_station = @event.station.present? ? @event.station : "" %>
      <% event_place = @event.place.present? ? @event.place : "" %>
      <%= link_to_web_search("駅名でWeb検索", [event_station, event_place]) %>
    <% end %>
  </div>
</div>