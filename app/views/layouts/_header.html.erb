<% provide(:home_page_name, @home_page_name) %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "SPaCE", @home_page_path, id: "logo" %>
    <div id="welcome_message">
      へようこそ！<%= " 名幹事 #{current_user.user_name}さん！" if user_signed_in? %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "#{yield(:home_page_name)}", @home_page_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown">
              <%= "#{current_user.user_name}さんのマイページ" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% unless current_user.admin? %>
                <li><%= link_to "お気に入り", root_path %></li>
                <li><%= link_to "過去のイベント", root_path %></li>
              <% end %>
              <li><%= link_to "アカウント", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "新規ユーザー登録", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>